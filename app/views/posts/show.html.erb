<p id="notice"><%= notice %></p>

<div class="conteiner">
<!-- 追加するコード-->
<% if @post.image? %>  <!-- アップロード画像がある場合に実行する -->
  <p>
    <%= image_tag @post.image.url %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
  </p>
<% end %>
<!-- ここまで -->

<p>
  <%= @post.text %>
</p>
  <div class="like_1">
    <h3>いいね件数: <%= @post.likes.count %></h3>
      <% if current_user.already_liked?(@post) %>
        <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
      <% else %>
        <%= button_to 'いいね', post_likes_path(@post) %>
      <% end %>
    <h2>いいねしたユーザー</h2>
        <% @post.liked_users.each do |user| %>
    <li><%= user.email %></li>
      <% end %>


    <%= link_to '編集', edit_post_path(@post) %> |
    <%= link_to '戻る', posts_path %>
  </div>
</div>
