

<h1>ユーザー詳細ページ</h1>
<h3><%= @user.email %></h3>
<h2>投稿内容</h2>
<% @user.posts.each do |post| %>
  <a href="/posts/<%= post.id %>"><%= post.text %></a>
  <hr>
<% end %>


<h3>いいねしている投稿</h3>
<% @user.liked_posts.each do |post| %>
  <%= post.user.email %>
  <%= post.text %>
<% end %>
<%= link_to "ユーザー一覧へ", users_path %>
<%= link_to "ホームへ戻る", posts_path %>

<%
=begin%>
 user#showページにフォローボタンやフォローを外すボタン
<%
=end%>
<% if user_signed_in? %>
  <% unless @user == current_user %>
    <% if current_user.following?(@user) %>
      <%= link_to unfollow_path(@user.id), method: :delete, :style=>"color:#E0245E;" do %>
        <i class="fas fa-heart"></i>
      <% end %>
    <% else %>
      <%= link_to follow_path(@user.id), method: :post do %>
        <i class="far fa-heart"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>

